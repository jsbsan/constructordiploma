'Metodos

Public Sub vacio()
  
  hIdDiplomaTematico = -1
  hNombreAlumno = ""
  hNombreTutor = ""
  hColegio = ""
  hCiudad = ""
  hFecha = ""
  hFotoAlumno = ""
  hFoto07 = ""
  htag = ""
  
End

Public Sub Text() As String
  
  Dim cadena As String
  
  cadena = hIdDiplomaTematico & "\n"
  cadena &= hNombreAlumno & "\n"
  cadena &= hNombreTutor & "\n"
  cadena &= hColegio & "\n"
  cadena &= hCiudad & "\n"
  cadena &= hFecha & "\n"
  cadena &= hFotoAlumno & "\n"
  cadena &= hFoto07 & "\n"
  cadena &= htag & "\n"
  cadena &= hid & "\n"
  
  Return cadena
  
End

