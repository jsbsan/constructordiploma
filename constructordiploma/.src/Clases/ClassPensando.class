' Gambas class file

Public parar As Boolean = False
Private timer1 As Timer
Private movi As Moviebox

Public Sub _new(contenedor As Container)
  
  timer1.delay = 100
  timer1.enabled = True
  timer1 = New Timer(contenedor)
  movi = New Moviebox(contenedor)
  movi.x = contenedor.w / 2 - 25
  movi.y = contenedor.h / 2 - 37
  movi.playing = True
  movi.path = "relojarena.gif"
  movi.w = 50
  movi.h = 75
  Wait 0.5
  
End

Public Sub Timer1_Timer()
  
  If parar = True Then
    Timer1.delay = False
    Me.close
  Endif
  
End
